.Menu {
  &_layout_horizontal {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    // align-content: stretch;
    .MenuItemSeparator {
      margin: 0 $(menuSeparatorHPadding)px; // Is horizontal space required (set to 0)?
      height: auto;
      width: 1px;
    }
  }
  // TODO: Use positive selectors (define defaults & override with `&_layout_horizontal` values)
  &:not(&_layout_horizontal) {
    max-width: 100%;
    // padding: $(menuVPadding)px 0; // ???
    .MenuItem {
      display: block;
      &_fullWidth {
        width: 100%;
      }
    }
  }
  &_singleChoice_forced {
    .MenuItem_checked {
      cursor: default; // Inactive item
    }
  }
}
